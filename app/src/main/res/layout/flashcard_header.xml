<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/row_text_parent"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:background="@android:color/transparent" >

<RelativeLayout
   android:id="@+id/primary"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:paddingRight="10dp"
   android:background="@android:color/transparent" >

   <TextView
		android:id="@+id/index_text_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginTop="10sp"
		android:layout_marginBottom="10sp"
		android:background="@android:color/transparent" />

   <TextView
		android:id="@+id/row_text_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/index_text_view"
		android:layout_alignParentTop="true"
		android:layout_marginTop="10sp"
		android:layout_marginBottom="10sp"
		android:background="@android:color/transparent" />

   <Button
        android:id="@+id/gallery_button"
        android:focusable="false"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_toRightOf="@+id/row_text_view"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/gallery_icon" />

   <Button
        android:id="@+id/mnem_button"
        android:focusable="false"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_toRightOf="@+id/gallery_button"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/mnem_icon" />

</RelativeLayout >

<LinearLayout
    	android:id="@+id/secondary"
    	android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0.5sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/list_divider" />

</RelativeLayout >
