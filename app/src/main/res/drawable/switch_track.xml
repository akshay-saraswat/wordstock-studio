<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
    <item android:state_enabled="false" android:drawable="@drawable/switch_track_disabled" />
    <item android:state_focused="true"  android:drawable="@drawable/switch_track_focused" />
    <item                               android:drawable="@drawable/switch_track_default" />
    -->
    <item android:state_checked="true">
           <shape
                    android:shape="rectangle"
                    android:visible="true"
                    android:dither="true"
                    android:useLevel="false">
          <solid	android:color="@android:color/holo_green_light"/>
          <corners
                    android:radius="15dp"/>
          <size
					android:width="20dp"
					android:height="30dp" />
          </shape>
     </item>
     <item android:state_checked="false">
           <shape
                    android:shape="rectangle"
                    android:visible="true"
                    android:dither="true"
                    android:useLevel="false">
          <solid	android:color="@android:color/holo_blue_bright"/>
          <corners
                    android:radius="15dp"/>
          <size
                    android:width="20dp"
                    android:height="30dp" />
          </shape>
     </item>

     <item >
           <shape
                    android:shape="rectangle"
                    android:visible="true"
                    android:dither="true"
                    android:useLevel="false">
          <padding android:left="5dp" android:right="5dp" />
          <solid	android:color="@android:color/holo_blue_bright"/>
          <corners
                    android:radius="15dp"/>
          <size
                    android:width="20dp"
                    android:height="30dp" />
          </shape>
     </item>
</selector>
